{
  "expo": {
    "name": "AuraMusic",
    "slug": "auramusic",
    "version": "2.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.auramusic.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "package": "com.auramusic.app",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "RECORD_AUDIO"
      ],
      "usesCleartextTraffic": true
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#1db954",
          "defaultChannel": "default"
        }
      ],
      "expo-dev-client",
      "expo-speech-recognition"
    ],
    "extra": {
      "eas": {
        "projectId": "21413e6b-1071-4b35-b0a8-12d778ee8b85"
      }
    }
  }
}
